<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignupActivity"
    android:background="@drawable/home">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageView
            android:layout_marginTop="5dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxHeight="200dp"
            android:maxWidth="300dp"
            android:adjustViewBounds="true"
            android:src="@drawable/title"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="60dp"
            android:text="아이디"
            android:fontFamily="@font/jua"
            android:textColor="@color/black"/>

        <EditText
            android:id="@+id/signup_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="영문 입력"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:inputType="textUri"
            android:background="@drawable/et_round"
            android:singleLine="true"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="60dp"
            android:text="비밀번호"
            android:fontFamily="@font/jua"
            android:textColor="@color/black"/>
        <EditText
            android:id="@+id/signup_pw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:inputType="textPassword"
            android:background="@drawable/et_round"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="60dp"
            android:text="비밀번호 재확인"
            android:fontFamily="@font/jua"
            android:textColor="@color/black"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <EditText
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="30dp"
                android:inputType="textPassword"
                android:id="@+id/signup_check_pw"
                android:background="@drawable/et_round"
                android:selectAllOnFocus="true" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="확인"
                android:layout_marginRight="50dp"
                android:background="@drawable/buttonedit"
                android:id="@+id/regi_btn_compare"
                android:fontFamily="@font/jua"
                android:textColor="@color/black"/>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="비밀번호를 입력하세요."
            android:textColor="#FF0000"
            android:id="@+id/regi_tv_compare"
            android:layout_marginLeft="60dp"
            android:fontFamily="@font/jua"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="60dp"
            android:text="이름"
            android:fontFamily="@font/jua"
            android:textColor="@color/black"/>

        <EditText
            android:id="@+id/signup_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:background="@drawable/et_round"
            android:inputType="text" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="60dp"
            android:text="이메일"
            android:fontFamily="@font/jua"
            android:textColor="@color/black"/>

        <EditText
            android:id="@+id/signup_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:inputType="textEmailAddress"
            android:background="@drawable/et_round" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="60dp"
            android:text="주소"
            android:fontFamily="@font/jua"
            android:textColor="@color/black"/>
        <EditText
            android:id="@+id/signup_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:inputType="text"
            android:background="@drawable/et_round"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="10dp"
            android:text="생년월일"
            android:fontFamily="@font/jua"
            android:textColor="@color/black"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/signup_birth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:hint="연 (4자)"
                android:background="@drawable/et_round"
                android:layout_marginRight="10dp"
                android:maxLength="4"
                android:inputType="number"
                android:layout_weight="1"

                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="년"
                android:textFontWeight="1"
                android:fontFamily="@font/jua"
                android:textColor="@color/black"/>

            <Spinner
                android:id="@+id/signup_month"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textFontWeight="1"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="월"
                android:layout_marginLeft="10dp"
                android:textFontWeight="1"
                android:fontFamily="@font/jua"
                android:textColor="@color/black"/>

            <EditText
                android:id="@+id/signup_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="@drawable/et_round"
                android:inputType="date"
                android:maxLength="2"
                android:textFontWeight="1"
                android:hint="일 (2자)"
                android:singleLine="true"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="일"
                android:layout_marginRight="50dp"
                android:textFontWeight="1"
                android:fontFamily="@font/jua"
                android:textColor="@color/black"/>


        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="전화번호"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="60dp"
            android:fontFamily="@font/jua"
            android:textColor="@color/black" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/signup_phonenum"
                android:background="@drawable/et_round"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="70dp"
                android:layout_weight="3"
                android:inputType="phone"
                android:singleLine="true"
                android:text="010" />
        <Button
            android:id="@+id/btn_signup"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginRight="50dp"
            android:text="회원가입"
            android:background="@drawable/buttonedit"
            android:fontFamily="@font/jua"
            android:textColor="@color/black"/>

        </LinearLayout>

    </LinearLayout>
</androidx.drawerlayout.widget.DrawerLayout>