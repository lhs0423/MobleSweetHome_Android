<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.MobleSweetHome">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/sweethome_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/sweethome_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Example_Sugnup"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".VentActivity"
            android:exported="false" />
        <activity
            android:name=".FireActivity"
            android:exported="false" />
        <activity
            android:name=".SecureActivity"
            android:exported="false" />
        <activity
            android:name=".LightActivity"
            android:exported="false" />
        <activity
            android:name=".PasswordUpdateActivity"
            android:exported="false" />
        <activity
            android:name=".MenuActivity"
            android:exported="false" />
        <activity
            android:name=".SearchActivity"
            android:exported="false" />
        <activity
            android:name=".SignupActivity"
            android:exported="false" />
        <activity
            android:name=".SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LoginActivity"
            android:exported="false"
            android:launchMode="singleTask" />

        <service
            android:name=".MyFirebaseMessagingService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
    </application>

</manifest>